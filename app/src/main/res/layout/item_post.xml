<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:padding="2dp"
        android:backgroundTint="#DBFEF8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp">

            <LinearLayout style="@style/ll1"
                android:layout_marginTop="8dp">

                <ImageView
                    style="@style/imageView"
                    android:src="@drawable/baseline_person_24" />

                <TextView
                    android:id="@+id/name"
                    style="@style/textView"
                    android:textStyle="bold"
                    android:text="Doniyor"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout style="@style/ll1">

                <ImageView
                    style="@style/imageView"
                    android:src="@drawable/ic_location" />

                <TextView
                    style="@style/textView"
                    android:text="Qayerdan:" />

                <TextView
                    android:id="@+id/locationFrom"
                    style="@style/textView"
                    android:text="Hazorasp-Xorazm" />

            </LinearLayout>

            <LinearLayout style="@style/ll1">

                <ImageView
                    style="@style/imageView"
                    android:src="@drawable/ic_location" />

                <TextView
                    style="@style/textView"
                    android:text="Qayerga:" />

                <TextView
                    android:id="@+id/locationTo"
                    style="@style/textView"
                    android:text="Xatirchi-Navoiy" />

            </LinearLayout>

            <LinearLayout style="@style/ll1">

                <ImageView
                    style="@style/imageView"
                    android:src="@drawable/baseline_person_24" />

                <TextView
                    style="@style/textView"
                    android:text="Ketish vaqti:" />

                <TextView
                    android:id="@+id/time"
                    style="@style/textView"
                    android:textSize="18sp"
                    android:text="29.03.2023 8:00" />

            </LinearLayout>


            <LinearLayout style="@style/ll1">

                <ImageView
                    style="@style/imageView"
                    android:src="@drawable/baseline_person_24" />

                <TextView
                    android:id="@+id/locationMore"
                    style="@style/textView"
                    android:text="Botirlar mahallasidan" />

            </LinearLayout>

            <LinearLayout style="@style/ll1">

                <ImageView
                    style="@style/imageView"
                    android:src="@drawable/baseline_person_24" />

                <TextView
                    android:id="@+id/personCount"
                    style="@style/textView"
                    android:text="3" />

                <TextView
                    style="@style/textView"
                    android:text="ta hamroh kerak" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/postedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textSize="14sp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/purple_500"
                    android:text="28.03.2023" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_be_partner"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/purple_500"
                    android:gravity="center"
                    android:text="Hamroh bo'lish"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:cornerRadius="10dp" />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>