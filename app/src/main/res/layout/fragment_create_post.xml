<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".CreatePostFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profileToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="E'lon yaratish"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"
            android:text="Yo'nalishni kiriting*"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#EBE6E6"
            >
            <TextView
                android:id="@+id/from_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qayerdan"
                android:layout_marginStart="12dp"
                android:textSize="26sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#EBE6E6"
            >
            <TextView
                android:id="@+id/where_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qayerga"
                android:layout_marginStart="12dp"
                android:textSize="26sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="Qachon ketmoqchisiz?*"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#EBE6E6"
                >
                <TextView
                    android:id="@+id/day_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sana"
                    android:layout_marginStart="12dp"
                    android:textSize="26sp"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#EBE6E6"
                >
                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Soat"
                    android:layout_marginStart="12dp"
                    android:textSize="26sp"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        






    </LinearLayout>



</LinearLayout>